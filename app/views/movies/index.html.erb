<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.description %></td>
        <td><%= image_tag(movie.image, width:'180', height: '270') %></td>
        <td><%= movie.format %></td>
        <td><%= link_to 'Show', movie %></td>
        <% if can? :update, @movie %>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <% end %>
        <% if can? :update, @movie %>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

