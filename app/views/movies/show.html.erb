<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>



<p>
  <strong>Image:</strong>
 	<div class="video-link" data-video-id="y-PKffm2uI4dk"><%= image_tag(@movie.image, width:'180', height: '270') %></div>
